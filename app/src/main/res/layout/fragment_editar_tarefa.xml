<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_editar_tarefa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/groupStylewhite_A701"
    tools:context=".Activity.EditarTarefaFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEdit"
        style="@style/btnSolidRounded_1"
        android:layout_width="@dimen/_170pxv"
        android:layout_height="@dimen/_40pxv"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="@dimen/_7pxv"
        android:paddingBottom="@dimen/_7pxv"
        android:singleLine="true"
        android:text="Alterar informações"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearColumnsistemasembarc"
        app:layout_constraintVertical_bias="0.485" />


    <LinearLayout
        android:id="@+id/linearColumn10deoutubro"
        style="@style/groupStylecyan_900cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160pxv"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084">

        <LinearLayout
            android:id="@+id/linearRowdatadevencime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_22pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearColumnsegunda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearRowsegunda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDia"
                        style="@style/txtPoppinsbold24_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:singleLine="true"
                        android:text="DATA" />

                    <View
                        android:id="@+id/viewEllipseThree"
                        android:layout_width="@dimen/_12pxh"
                        android:layout_height="@dimen/_12pxh"
                        android:layout_marginStart="@dimen/_66pxh"
                        android:layout_marginTop="@dimen/_21pxv"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:background="@drawable/rectangle_bg_lime_600_radius_6" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearColumnellipsetwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_marginBottom="@dimen/_4pxv"
                android:layout_weight="0.14"
                android:orientation="vertical">

                <View
                    android:id="@+id/viewEllipseTwo"
                    android:layout_width="@dimen/_12pxh"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:background="@drawable/rectangle_bg_blue_a100_radius_6" />

                <View
                    android:id="@+id/viewEllipseOne"
                    android:layout_width="@dimen/_22pxh"
                    android:layout_height="@dimen/_22pxh"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:background="@drawable/rectangle_bg_green_500_radius_11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:paddingStart="20dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTarefaDia"
                    style="@style/txtPoppinssemibold14_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    style="@style/txtPoppinssemibold14_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=" / "
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTarefaMes"
                    style="@style/txtPoppinssemibold14_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    style="@style/txtPoppinssemibold14_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=" / "
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTarefaAno"
                    style="@style/txtPoppinssemibold14_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtGroupEleven"
            style="@style/txtSolidRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_marginEnd="@dimen/_17pxh"
            android:layout_marginBottom="@dimen/_13pxv"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/_8pxh"
            android:paddingTop="@dimen/_3pxv"
            android:paddingBottom="@dimen/_2pxv"
            android:singleLine="true"
            android:text="Aqui você pode editar sua tarefa! :)" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearColumnsistemasembarc"
        style="@style/groupStylecornerRadius_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180pxv"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774">

        <EditText
            android:id="@+id/edtTitulo"
            style="@style/etPoppinsmedium16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:drawableRight="@drawable/editpen"
            android:ellipsize="end"
            android:hint="Titulo"
            android:inputType="text"
            android:paddingStart="@dimen/_2pxh"
            android:paddingEnd="@dimen/_5pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:textColorHint="@color/gray_500" />

        <EditText
            android:id="@+id/edtDescricao"
            style="@style/etPoppinsmedium16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:drawableRight="@drawable/editpen"
            android:ellipsize="end"
            android:hint="Descrição"
            android:inputType="text"
            android:paddingEnd="@dimen/_5pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:textColorHint="@color/gray_500" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHorario"
            style="@style/etPoppinsmedium16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginBottom="@dimen/_19pxv"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/relogio"
            android:drawablePadding="@dimen/_20pxh"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:hint="Horário"
            android:paddingLeft="@dimen/_4pxh"
            android:paddingEnd="@dimen/_10pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:textAllCaps="false"
            android:textColor="@color/ABABAB" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEdtCalendarDialog"
        style="@style/btnSolidRounded_1"
        android:layout_width="@dimen/_250pxv"
        android:layout_height="@dimen/_55pxv"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="9dp"
        android:drawableRight="@drawable/calender"
        android:ellipsize="end"
        android:gravity="center|start"
        android:paddingStart="@dimen/_29pxh"
        android:paddingTop="@dimen/_7pxv"
        android:paddingEnd="@dimen/_19pxh"
        android:paddingBottom="@dimen/_7pxv"
        android:singleLine="true"
        android:text="Hoje"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearColumnsistemasembarc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTarefa"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTarefa"
        style="@style/txtPoppinsbold20_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_weight="0.56"
        android:ellipsize="end"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:text="Tarefa"
        app:layout_constraintBottom_toTopOf="@+id/linearColumnsistemasembarc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearColumnsistemasembarc"
        app:layout_constraintTop_toBottomOf="@+id/linearColumn10deoutubro"
        app:layout_constraintVertical_bias="0.21" />

