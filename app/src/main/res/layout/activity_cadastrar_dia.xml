<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarDiaActivity">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60pxv"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/_5pxv"
        android:layout_marginEnd="@dimen/_2pxh"
        >

        <LinearLayout
            android:id="@+id/linearRowhome"
            style="@style/groupStyleblue_100cornerRadius"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_15pxv"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageHome"
                android:layout_width="@dimen/_50pxh"
                android:layout_height="@dimen/_50pxh"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_33pxh"
                android:background="#BDE6FE"
                android:scaleType="fitXY"
                android:src="@drawable/img_home"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_home" />

            <ImageButton
                android:id="@+id/imageClipboardList"
                android:layout_width="@dimen/_50pxh"
                android:layout_height="@dimen/_50pxh"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_80pxh"
                android:background="#BDE6FE"
                android:scaleType="fitXY"
                android:src="@drawable/img_clipboardlist"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_clipboardlist" />

            <ImageButton
                android:id="@+id/imageUser"
                android:layout_width="@dimen/_50pxh"
                android:layout_height="@dimen/_50pxh"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_79pxh"
                android:layout_marginEnd="@dimen/_33pxh"
                android:background="#BDE6FE"
                android:scaleType="fitXY"
                android:src="@drawable/img_user"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_user" />
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>

    <FrameLayout
        android:id="@+id/frameCadastrarDia"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearColumngroup142"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginBottom="@dimen/_10pxv"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2pxh"
                android:gravity="center_horizontal"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:id="@+id/linearRowol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearColumnol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_weight="0.84"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtOl"
                            style="@style/txtPoppinsbold16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25pxv"
                            android:layout_marginLeft="@dimen/_25pxv"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/lbl_ol"
                            tools:text="@string/lbl_ol" />

                        <TextView
                            android:id="@+id/txtNomeUsuario"
                            style="@style/txtPoppinsbold24_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25pxv"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Daniel Oliveira" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageGroup142"
                        android:layout_width="@dimen/_50pxh"
                        android:layout_height="@dimen/_50pxh"
                        android:layout_marginTop="@dimen/_25pxv"
                        android:layout_marginRight="@dimen/_10pxv"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_group142" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearRowsegunda"
                style="@style/groupStylecyan_1"
                android:layout_width="362dp"
                android:layout_height="67dp"
                android:layout_marginStart="@dimen/_25pxv"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/diaSpinner"
                    android:layout_width="371dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearColumnsistemasembarc"
                style="@style/groupStylecornerRadius_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_25pxv"
                android:layout_marginStart="@dimen/_2pxh"
                android:layout_marginTop="@dimen/_33pxv"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSistemasEmbarc"
                    style="@style/txtPoppinsbold16_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_22pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/msg_sistemas_embarc"
                    tools:text="@string/msg_sistemas_embarc" />

                <TextView
                    android:id="@+id/txtHoras"
                    style="@style/txtPoppinsmedium11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_24pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_horas"
                    tools:text="@string/lbl_horas" />

                <TextView
                    android:id="@+id/txt10201200"
                    style="@style/txtPoppinsmedium12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginEnd="@dimen/_24pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_10_20_12_00"
                    tools:text="@string/lbl_10_20_12_00" />

                <View
                    android:id="@+id/lineLineOne"
                    android:layout_width="@dimen/_274pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:background="@color/black_900_33" />

                <View
                    android:id="@+id/lineLineTwo"
                    android:layout_width="@dimen/_274pxh"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:background="@color/gray_500" />

                <TextView
                    android:id="@+id/txtProtocolosWeb"
                    style="@style/txtPoppinsbold16_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_marginEnd="@dimen/_22pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_protocolos_web"
                    tools:text="@string/lbl_protocolos_web" />

                <TextView
                    android:id="@+id/txtHorasOne"
                    style="@style/txtPoppinsmedium11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginEnd="@dimen/_22pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_horas"
                    tools:text="@string/lbl_horas" />

                <TextView
                    android:id="@+id/txt15301710"
                    style="@style/txtPoppinsmedium12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginEnd="@dimen/_22pxh"
                    android:layout_marginBottom="@dimen/_23pxv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_15_30_17_10"
                    tools:text="@string/lbl_15_30_17_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtAdicionarclass"
                style="@style/txtPoppinsbold15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/msg_adicionar_class"
                tools:text="@string/msg_adicionar_class" />

            <LinearLayout
                android:id="@+id/linearColumngrouptwentynine"
                style="@style/groupStylecornerRadius_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_25pxv"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_marginEnd="@dimen/_2pxh"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etGroupTwentyNine"
                    style="@style/etPoppinsmedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_marginEnd="@dimen/_19pxh"
                    android:ellipsize="end"
                    android:hint="@string/lbl_assunto"
                    android:inputType="text"
                    android:paddingStart="@dimen/_2pxh"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_500"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etGroupThirtyThree"
                    style="@style/etPoppinsmedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_marginEnd="@dimen/_19pxh"
                    android:ellipsize="end"
                    android:hint="@string/lbl_aula"
                    android:inputType="text"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_500"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/etGroupThirtyOne"
                    style="@style/etPoppinsmedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_19pxh"
                    android:layout_marginBottom="@dimen/_19pxv"
                    android:ellipsize="end"
                    android:hint="@string/lbl_horas_da_aula"
                    android:inputType="text"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_7pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_500"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAdicionarClasseOne"
                style="@style/btnSolidRounded_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_76pxh"
                android:layout_marginEnd="@dimen/_73pxh"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_29pxh"
                android:paddingTop="@dimen/_7pxv"
                android:paddingEnd="@dimen/_19pxh"
                android:paddingBottom="@dimen/_7pxv"
                android:singleLine="true"
                android:text="@string/msg_adicionar_class"
                android:textAllCaps="false"
                tools:text="@string/msg_adicionar_class" />
        </LinearLayout>

    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>