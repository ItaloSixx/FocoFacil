<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.447">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_2pxh"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_weight="0.84"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOl"
                    style="@style/txtPoppinsbold16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15pxv"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_ol"
                    tools:text="@string/lbl_ol" />

                <TextView
                    android:id="@+id/txtNomeUsuario"
                    style="@style/txtPoppinsbold24_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15pxv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Daniel Oliveira" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageGroup142"
                android:layout_width="@dimen/_50pxh"
                android:layout_height="@dimen/_50pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_marginRight="@dimen/_10pxv"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_group142" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25pxh"
            android:fontFamily="@font/poppins"
            android:text="Nova Atividade"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/linearColumngrouptwentynine"
            style="@style/groupStylecornerRadius_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitulo"
            android:layout_marginLeft="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_10pxh"
            android:layout_marginRight="@dimen/_20pxh"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTexttituloAtividade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitulo"
                android:layout_margin="@dimen/_10pxh"
                android:hint="Título da Atividade" />

            <EditText
                android:id="@+id/editTextAtividade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTexttituloAtividade"
                android:layout_margin="@dimen/_10pxh"
                android:hint="Descrição da Atividade" />
        </LinearLayout>


        <TextView
            android:id="@+id/infoCalendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearColumngrouptwentynine"
            android:layout_marginLeft="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_10pxh"
            android:text="@string/infoCalendario"></TextView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOpenCalendarDialog"
            android:layout_width="@dimen/_150pxh"
            android:layout_height="@dimen/_45pxh"
            android:layout_below="@+id/infoCalendario"
            android:layout_marginLeft="@dimen/_15pxh"
            android:background="@drawable/menu"
            android:gravity="center"
            android:inputType="none"
            android:fontFamily="@font/poppins"
            android:text="@string/CandarioDialog"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/infoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonOpenCalendarDialog"
            android:layout_marginLeft="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_10pxh"
            android:text="@string/infoHora"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOpenTimePickerDialog"
            android:layout_width="@dimen/_150pxh"
            android:layout_height="@dimen/_45pxh"
            android:layout_below="@+id/infoData"
            android:layout_marginLeft="@dimen/_15pxh"
            android:background="@drawable/menu"
            android:fontFamily="@font/poppins"
            android:text="@string/horaDialog"
            android:inputType="none"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/infoSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonOpenTimePickerDialog"
            android:layout_marginLeft="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_10pxh"
            android:text="@string/infoSpinner"></TextView>

        <Spinner
            android:id="@+id/spinnerRepeticao"
            android:layout_width="@dimen/_150pxh"
            android:layout_height="@dimen/_45pxh"
            android:layout_below="@+id/infoSpinner"
            android:layout_marginLeft="@dimen/_15pxh"
            android:background="@drawable/menu"
            android:popupBackground="@drawable/dialogbkg"
            android:text="Rotinas"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSalvar"
            android:layout_width="@dimen/_118pxh"
            android:layout_height="@dimen/_43pxh"
            android:layout_below="@+id/spinnerRepeticao"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_100pxh"
            android:layout_marginLeft="@dimen/_100pxh"
            android:layout_marginTop="@dimen/_16pxh"
            android:layout_marginEnd="@dimen/_100pxh"
            android:layout_marginRight="@dimen/_100pxh"
            android:background="@drawable/menu"
            android:gravity="center"
            android:text="Salvar"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </RelativeLayout>

</LinearLayout>
