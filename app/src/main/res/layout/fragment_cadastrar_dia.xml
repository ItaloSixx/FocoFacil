<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/txtAdicionarclass"
        style="@style/txtPoppinsbold15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Descreva a tarefa"
        app:layout_constraintBottom_toTopOf="@+id/linearColumngrouptwentynine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearRowsegunda"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearColumngrouptwentynine"
        style="@style/groupStylecornerRadius_1"
        android:layout_width="@dimen/_350pxv"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarToolbar"
        app:layout_constraintVertical_bias="0.397">

        <EditText
            android:id="@+id/editTexttituloAtividade"
            style="@style/etPoppinsmedium16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:ellipsize="end"
            android:hint="@string/lbl_assunto"
            android:inputType="text"
            android:paddingStart="@dimen/_2pxh"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:textColorHint="@color/gray_500" />

        <EditText
            android:id="@+id/editTextAtividade"
            style="@style/etPoppinsmedium16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:ellipsize="end"
            android:hint="Descrição"
            android:inputType="text"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:textColorHint="@color/gray_500" />

        <TextView
            android:id="@+id/buttonOpenTimePickerDialog"
            style="@style/etPoppinsmedium16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginBottom="@dimen/_19pxv"
            android:drawableRight="@drawable/relogio"
            android:drawablePadding="@dimen/_20pxh"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="Horário"
            android:inputType="text"
            android:paddingLeft="@dimen/_4pxh"
            android:paddingEnd="@dimen/_10pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:textColorHint="@color/gray_500" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="@dimen/_411pxv"
            android:layout_height="wrap_content"
            android:layout_weight="0.84"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOl"
                style="@style/txtPoppinsbold16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxv"
                android:layout_marginTop="@dimen/_15pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_ol" />

            <TextView
                android:id="@+id/txtNomeUsuario"
                style="@style/txtPoppinsbold24_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Usuario" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearRowsegunda"
        style="@style/groupStylecyan_1"
        android:layout_width="@dimen/_350pxv"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarToolbar"
        app:layout_constraintVertical_bias="0.077">

        <TextView
            android:id="@+id/txtDia"
            style="@style/txtPoppinsbold24_2"
            android:layout_width="@dimen/_152pxv"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_marginBottom="@dimen/_7pxv"
            android:layout_weight="0.52"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Hoje" />

        <ImageView
            android:id="@+id/buttonOpenCalendarDialog"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40pxv"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_30pxv"
            app:srcCompat="@drawable/calender"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="439dp" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSalvar"
        style="@style/btnSolidRounded_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="@dimen/_29pxh"
        android:paddingTop="@dimen/_7pxv"
        android:paddingEnd="@dimen/_19pxh"
        android:paddingBottom="@dimen/_7pxv"
        android:singleLine="true"
        android:text="Adicionar tarefa"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarToolbar"
        app:layout_constraintVertical_bias="0.802" />

    <CheckBox
        android:id="@+id/repeatCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableLeft="@drawable/repeat"
        android:paddingStart="12dp"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="440dp" />


</androidx.constraintlayout.widget.ConstraintLayout>