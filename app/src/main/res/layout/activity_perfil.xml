<!-- activity_perfil.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_group142" />

    <TextView
        android:id="@+id/txtNomeNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtEmailNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txtEditarNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar nome" />

    <TextView
        android:id="@+id/txtEditarSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar senha" />

    <TextView
        android:id="@+id/txtEditarEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar email" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/1033173712" />

    <TextView
        android:id="@+id/cadTarefaTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CadastrarTarefa" />

    <TextView
        android:id="@+id/txtEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil" />

</LinearLayout>
